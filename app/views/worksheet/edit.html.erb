<div id="workspace">
	<div id="sidebar">
		<button id="create" class="btn btn-success">Create</button>
	</div>
	<div id="rightbar">
		<div id="options">


		</div>
		<div id="options-buttons">
			<div class="options-header">Buttons</div>
			<div class="option">
				<button id="save" class="btn btn-success">Save</button>
			</div>
		</div>
	</div>
	<div id="worksheet">
		<div id="page-container">
			<div id="page"></div>
